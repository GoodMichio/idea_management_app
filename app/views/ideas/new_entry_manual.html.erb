<h2>手動で新規登録</h2>
<%= form_with(model: @idea, url: ideas_path, method: :post) do |f| %>
  <div>
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description, "内容" %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit "登録する" %>
  </div>
<% end %>

