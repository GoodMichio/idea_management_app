<h1>アイデア一覧</h1>
<%= link_to '新しいアイデアを追加', new_idea_path %>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.title %></td>
        <td><%= idea.description %></td>
        <td>
          <%= link_to "編集", edit_idea_path(idea) %>  |
          <%= link_to "削除", confirm_delete_idea_path(idea), method: :get %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
