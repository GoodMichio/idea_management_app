<h1>アイデア一覧</h1>
<%= link_to '手動で新規登録', new_entry_manual_ideas_path, class: 'btn btn-primary' %>
<%= link_to 'AIからの提案で新規登録', new_entry_auto_ideas_path, class: 'btn btn-success' %>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.title %></td>
        <td><%= idea.description %></td>
        <td>
          <%= link_to "編集", edit_idea_path(idea) %>  |
          <%= link_to "削除", confirm_delete_idea_path(idea), method: :get %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
