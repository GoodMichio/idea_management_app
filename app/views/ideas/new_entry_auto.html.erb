<h2>AIからの提案で新規登録</h2>
<%= form_with url: create_auto_ideas_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <div>
    <%= form.submit "登録する", class: "btn btn-success" %>
  </div>
<% end %>

